# Twitch API Credentials
# Kopiere diese Datei zu .env und fülle deine echten Credentials ein

# Twitch Client ID (von dev.twitch.tv)
TWITCH_CLIENT_ID=deine_client_id_hier

# Twitch Client Secret (von dev.twitch.tv)
TWITCH_CLIENT_SECRET=dein_client_secret_hier

# Twitch Channel Name
TWITCH_CHANNEL=dein_twitch_kanal

# Download Quality (best, 720p, 480p, worst)
DOWNLOAD_QUALITY=720p

# Output Directory
OUTPUT_DIRECTORY=./downloads

# Test Mode (True/False) - Begrenzt Downloads auf 30 Sekunden für schnelle Tests
TEST_MODE=False
